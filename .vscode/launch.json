    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Webhooks",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\webhook.js",
            "runtimeArgs": [
                "--env-file=.env"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Executar Testes E2E",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\tests\\index.js",
            "runtimeArgs": [
                "--env-file=.env"
            ]
        }
    ]
}